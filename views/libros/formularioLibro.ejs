<form action="/libros<%= editar ? '/' + libro._id + '?_method=PUT' : '' %>" method="POST">
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <div class="mb-3">
    <label>Título</label>
    <input type="text" name="titulo" class="form-control" value="<%= libro.titulo || '' %>" required>
  </div>
  <div class="mb-3">
    <label>Autor</label>
    <input type="text" name="autor" class="form-control" value="<%= libro.autor || '' %>" required>
  </div>
  <div class="mb-3">
    <label>Año de Publicación</label>
    <input type="number" name="anio_publicacion" class="form-control" value="<%= libro.anio_publicacion || '' %>">
  </div>
  <div class="mb-3">
    <label>Género</label>
    <input type="text" name="genero" class="form-control" value="<%= libro.genero || '' %>">
  </div>
  <div class="mb-3">
    <label>Edición</label>
    <input type="number" name="edicion" class="form-control" value="<%= libro.edicion || '' %>">
  </div>
  <button type="submit" class="btn btn-success"><%= editar ? 'Actualizar' : 'Guardar' %></button>
</form>
